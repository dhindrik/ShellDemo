<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ShellDemo.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomePage">
    <VerticalStackLayout
        Padding="10"
        HorizontalOptions="Center"
        Spacing="20">
        <Label
            HorizontalOptions="Center"
            Text="Home page"
            VerticalOptions="Center" />
        <Button Clicked="Map_Clicked" Text="Show map" />
        <Button Clicked="Settings_Clicked" Text="Settings" />

        <Entry x:Name="NameEntry" />
        <Button Clicked="Button_Clicked" Text="Show" />
        <Button Clicked="Main_Clicked" Text="Back to main page" />
    </VerticalStackLayout>
</ContentPage>