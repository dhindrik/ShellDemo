<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ShellDemo.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">
            <Button
                x:Name="ShowTabDemo"
                Clicked="Button_Clicked"
                Text="Tab demo" />
            <Button
                x:Name="ShowFlyoutDemo"
                Clicked="Button_Clicked"
                Text="Flyout demo" />
            <Button
                x:Name="ShowFlyoutCustomDemo"
                Clicked="Button_Clicked"
                Text="Flyout custom demo" />
            <Button
                x:Name="ShowFlyoutFullCustomDemo"
                Clicked="Button_Clicked"
                Text="Flyout full custom demo" />
            <Button
                x:Name="ShowNavigationDemo"
                Clicked="Button_Clicked"
                Text="Navigation demo" />
            <Button
                x:Name="ShowSearchDemo"
                Clicked="Button_Clicked"
                Text="Search demo" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
